<div class="card">
  <div class="card-body">
    <div class="d-flex gap-2 w-100">
      <span class="flex-grow-1 fw-bold">Nome:</span>
      <span><%= customer.name%></span>
    </div>
    <div class="d-flex gap-2 w-100">
      <span class="flex-grow-1 fw-bold">Email:</span>
      <span><%= customer.email%></span>
    </div>
    <div class="d-flex gap-2 w-100">
      <span class="flex-grow-1 fw-bold">Telefone:</span>
      <span><%= customer.mobile_phone%></span>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Editar', edit_customer_path(customer), class: "btn btn-info"  %>
    <% unless current_page?(customer_path(customer)) %>
      <%= link_to 'Ver', customer_path(customer), class: "btn btn-success"  %>
    <% end %>
    <%= link_to "Deletar", customer_path(customer), data: {
                                                      turbo_method: :delete,
                                                      turbo_confirm: "Are you sure?"
                                                    }, class: "btn btn-danger" %>
  </div>
</div>